{
  "extends": ["next/core-web-vitals", "prettier", "plugin:import/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],

    "import/order": [
      "error",
      {
        "groups": [
          ["builtin", "external"], // 기본 모듈(Node.js 내장 모듈)과 외부 모듈을 함께 정렬
          ["internal", "parent", "sibling", "index"], // 내부 모듈, 부모 모듈, 형제 모듈, 인덱스 파일 순
          ["type"] // 타입 관련 import를 그룹화 (예: TypeScript)
        ],
        "newlines-between": "always", // 그룹 사이에 항상 빈 줄 추가
        "alphabetize": {
          "order": "asc", // 알파벳 순서로 정렬
          "caseInsensitive": true // 대소문자 구분 없이 정렬
        },
        "pathGroups": [
          {
            "pattern": "@styles/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@components/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@pages/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@assets/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@hooks/**",
            "group": "internal",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin", "external"] // 기본 및 외부 모듈을 제외하고 적용
      }
    ],

    "import/no-unresolved": [2, { "ignore": ["\\?.*"] }]
  },

  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@styles", "./src/styles"],
          ["@components", "./src/components"],
          ["@pages", "./src/pages"],
          ["@assets", "./src/assets"],
          ["@hooks", "./src/hooks"]
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".css"]
      }
    }
  }
}